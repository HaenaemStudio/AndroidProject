<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- 헤더 -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#ff6b35"
            android:padding="15dp">

            <TextView
                android:id="@+id/btn_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="← 뒤로"
                android:textColor="#ffffff"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true" />

            <TextView
                android:id="@+id/btn_favorite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="♡ 즐겨찾기"
                android:textColor="#ffffff"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true" />

        </RelativeLayout>

        <!-- 뷔페 이미지 -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@drawable/hamba_image_placeholder"
            android:layout_margin="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="📷 뷔페 사진"
                android:layout_gravity="center"
                android:textSize="16sp"
                android:textColor="#666" />

        </FrameLayout>

        <!-- 기본 정보 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#f9f9f9"
            android:padding="15dp"
            android:layout_margin="15dp"
            android:layout_marginTop="0dp">

            <TextView
                android:id="@+id/tv_hamba_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="맛있는 한식뷔페"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginBottom="10dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="10dp">

                <TextView
                    android:id="@+id/tv_rating_stars"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="★★★★☆"
                    android:textColor="#ffc107"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_rating_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4.2 (127명 평가)"
                    android:layout_marginStart="5dp" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="서울시 강남구 역삼동 123-45"
                android:textColor="#666" />

        </LinearLayout>

        <!-- 가격 정보 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#f9f9f9"
            android:padding="15dp"
            android:layout_margin="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="💰 가격 정보"
                android:textStyle="bold"
                android:textColor="#ff6b35"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="점심: 15,000원 / 저녁: 18,000원" />

        </LinearLayout>

        <!-- 운영시간 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#f9f9f9"
            android:padding="15dp"
            android:layout_margin="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="🕐 운영시간"
                android:textStyle="bold"
                android:textColor="#ff6b35"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/tv_operating_hours"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="평일: 11:00 - 21:00\n주말: 11:00 - 22:00" />

        </LinearLayout>

        <!-- 리뷰 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#f9f9f9"
            android:padding="15dp"
            android:layout_margin="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="📝 리뷰"
                android:textStyle="bold"
                android:textColor="#ff6b35"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/tv_review"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="반찬 종류가 정말 많아요! 특히 김치찌개가 맛있어서..." />

        </LinearLayout>

    </LinearLayout>

</ScrollView>